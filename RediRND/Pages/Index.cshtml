@page
@model IndexModel
@{
    ViewData["Title"] = "Admin Home";
}

<div class="text-center">
    <h1 class="display-4">Admin Home Page</h1>
    <p>This will be the home page for admin to run End Of Day processing for the stake calculation.</p>
</div>
<hr />
<h3>Run End of Day</h3>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DailyProfit.Date" class="control-label"></label>
                <input asp-for="DailyProfit.Date" class="form-control" />
                <span asp-validation-for="DailyProfit.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DailyProfit.Profit" class="control-label"></label>
                <input asp-for="DailyProfit.Profit" class="form-control" />
                <span asp-validation-for="DailyProfit.Profit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr />
<h3>Profits</h3>
<table class="table">
    <thead>
        <tr>
            <th>
                Date
            </th>
            <th>
                Profit
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DailyProfits)
        {
            <tr>
                <td>
                    @item.Date.ToShortDateString()
                </td>
                <td>
                    @item.Profit.ToString("C")
                </td>
                <td>
                    <a asp-page="/DailyProfits/Edit" asp-route-id="@item.Date">Edit</a> |
                    <a asp-page="/DailyProfits/Delete" asp-route-id="@item.Date">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>