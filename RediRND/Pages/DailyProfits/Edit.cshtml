@page
@model RediRND.Pages.DailyProfits.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>DailyProfit</h4>
<hr />
<dl>
    <dt class="col-sm-2">
        Date
    </dt>
    <dd class="col-sm-10">
        @Model.DailyProfit.Date.ToShortDateString()
    </dd>
</dl>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DailyProfit.Date" />
            <div class="form-group">
                <label asp-for="DailyProfit.Profit" class="control-label"></label>
                <input asp-for="DailyProfit.Profit" class="form-control" />
                <span asp-validation-for="DailyProfit.Profit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
