@page
@model RediRND.Pages.Stakers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Staker</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staker.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staker.Username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staker.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staker.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Staker.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Staker.LastName)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Staker?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
<h3>Current Memberships</h3>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                Container Name
            </th>
            <th>
                Local Stake
            </th>
            <th>
                Stake
            </th>
        </tr>
    </thead>
    @if (Model.Staker != null)
    {
        <tbody>
            @foreach (var item in Model.Staker.ContainerMemberships)
            {
                <tr>
                    <td>
                        @item.Container.Name
                    </td>
                    <td>
                        @item.LocalStake.ToString("F5")
                    </td>
                    <td>
                        @item.Stake.ToString("F5")
                    </td>
                </tr>
            }
        </tbody>
    }
</table>
<h3>Profit List</h3>
<hr />
<table class="table">
    <thead>
        <tr>
            <th>
                Date
            </th>
            <th>
                Stake
            </th>
            <th>
                Profit
            </th>
        </tr>
    </thead>
    @if (Model.Staker != null)
    {
        <tbody>
            @foreach (var item in Model.Staker.StakerDailyProfits)
            {
                <tr>
                    <td>
                        @item.Date.ToShortDateString()
                    </td>
                    <td>
                        @item.Stake.ToString("F5")
                    </td>
                    <td>
                        @item.Profit.ToString("C") 
                    </td>
                </tr>
            }
        </tbody>
    }
</table>


