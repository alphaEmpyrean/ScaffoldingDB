@page "/Containers/{id:int}/Delete"
@model RediRND.Pages.Containers.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Container</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Container.Name
        </dd>
        <dt class="col-sm-2">
            Parent Container
        </dt>
        <dd class="col-sm-10">
            @(Model.Container.Parent == null ? "***No Parent" : Model.Container.Parent.Name)
        </dd>
        <dt class="col-sm-2">
            Stake
        </dt>
        <dd class="col-sm-10">
            @Model.Container.Stake.ToString("F5")
        </dd>
        <dt class="col-sm-2">
            Weight
        </dt>
        <dd class="col-sm-10">
            @Model.Container.Weight
        </dd>
        <dt class="col-sm-2">
            Local Stake
        </dt>
        <dd class="col-sm-10">
            @Model.Container.LocalStake.ToString("F5")
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Container.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
