@page "/Containers/{id:int}/EditContainer/{childId:int}"
@model RediRND.Pages.Containers.EditChildContainerModel
@{
    ViewData["Title"] = "AddChildContainer";
}

<h1>AddChildContainer</h1>

<h4>Container</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        Name
    </dt>
    <dd class="col-sm-10">
        @ViewBag.ChildContainer.Name
    </dd>
</dl>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../Details" asp-route-id="@ViewBag.ChildContainer.ParentId">Back</a>
</div>
