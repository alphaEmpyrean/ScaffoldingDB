@page "/Containers/{id:int}/EditStaker/{childId:int}"
@model RediRND.Pages.Containers.EditChildStakerModel

@{
    ViewData["Title"] = "Edit Child Staker";
}

<h1>Edit Child Staker</h1>

<hr />
<dl class="row">
    <dt class="col-sm-2">
        Username
    </dt>
    <dd class="col-sm-10">
        @ViewBag.ContainerMembership.Staker.Username
    </dd>
    <dt class="col-sm-2">
        First Name
    </dt>
    <dd class="col-sm-10">
        @ViewBag.ContainerMembership.Staker.FirstName
    </dd>
    <dt class="col-sm-2">
        Last Name
    </dt>
    <dd class="col-sm-10">
        @ViewBag.ContainerMembership.Staker.LastName
    </dd>
</dl>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../Details" asp-route-id="@ViewBag.ContainerMembership.ContainerId" asp-route-childId="@ViewBag.ContainerMembership.StakerId">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
